<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    во всех вьюхах было написано еще        android:layout_marginLeft="16dp"-->

    <TextView
        android:id="@+id/name_of_ivent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Событие"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/date_of_ivent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_of_ivent"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Дата"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/name_of_ivent"
        app:layout_constraintBottom_toBottomOf="@+id/name_of_ivent" />

</androidx.constraintlayout.widget.ConstraintLayout>